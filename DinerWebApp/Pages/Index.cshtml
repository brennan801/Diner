@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="row">

    <div class="col-6">
        <form method="post">
            <label for="name">Simulation Name:</label>
            <input name="name" type="text" min="1" value="SimulationName" required />
            <br />

            <label for="customers">Number of Customers:</label>
            <input name="customers" type="number" min="1" max="999" value="15" required />
            <br />

            <label for="waiters">Number of Waiters:</label>
            <input name="waiters" type="number" min="1" max="99" value="2" required />
            <br />

            <label for="cooks">Number of Cooks:</label>
            <input name="cooks" type="number" min="1" max="99" value="2" required/>
            <br />

            <label for="tables">Number of Tables:</label>
            <input name="tables" type="number" min="3" max="99" value="12" required />
            <br />

            <label for="partySize">Average Party Size:</label>
            <input name="partySize" type="number" min="1" max="13" value="3" required />
            <br />

            <label for="entryTime">Average Party Entry Time:</label>
            <input name="entryTime" type="range" min="1" max="10" value="4"/>
            <br />

            <label for="eatingTime">Average Party Eat Time:</label>
            <input name="eatingTime" type="range" min="4" max="14" value="6"/>
            <br />

            <button onclick=>Simulate</button>
        </form>
    </div>
    <div class="col-6">
        @if(Model.Results is not null)
        {
            <h3>Name: @Model.Results.Name</h3>
            <p>Runtime: @Model.Results.Runtime</p>
            <p>Number Of Customers: @Model.Results.NumberOfCustomers</p>
            <p>Number Of Waiters: @Model.Results.NumberOfWaiters</p>
            <p>Number Of Cooks: @Model.Results.NumberOfCooks</p>
            <p>Number Of Tables: @Model.Results.NumberOfTables</p>
            <p>Average Party Entry Time: @Model.Results.AverageEntryTime</p>
            <p>Set Average Party Size: @Model.Results.SetAveragePartySize</p>
            <p>Actual Average Party Size: @Model.Results.ActualAveragePartySize</p>

        }
    </div>
</div>
